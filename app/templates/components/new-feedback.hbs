{{#if addNewFeedback}}
<section class="feedbackSection">
  <h3>New Feedback:</h3>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="name">Name:</label>
        {{input value=name id="name"}}
      </div>

      <div class="form-group">
        <label for="eval">Review:</label>
        {{textarea value=eval id="eval"}}
      </div>

      <button class="btn saveBtn" {{action 'saveFeedback'}}>Save</button>
    </form>
  </div>
</section>
{{else}}

  <div class="feedback text-center">
    <h2>(be more constructive with your)</h2>
    <button class="btn" {{action 'feedbackFormShow'}}>Leave Feedback</button>
  </div>
{{/if}}
